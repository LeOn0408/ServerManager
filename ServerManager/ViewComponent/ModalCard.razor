<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                @* TODO:Добавить Динамическое название *@
                <h5 class="modal-title" id="staticBackdropLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть" @onclick="OnClickExitCallback"></button>
            </div>
        <div class="modal-body">
            @ChildContent
        </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="OnClickMethodCallback">Сохранить</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="OnClickExitCallback">Закрыть</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public EventCallback OnClickMethodCallback { get; set; }

    [Parameter]
    public EventCallback OnClickExitCallback { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}